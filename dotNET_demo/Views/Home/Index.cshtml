@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-sm-3">
            Title
        </div>
        <div class="col-sm-9">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="http://placehold.it/1100x400" alt="...">
                        <div class="carousel-caption">
                            Product 1
                        </div>
                    </div>
                    <div class="item">
                        <img src="http://placehold.it/1100x400" alt="...">
                        <div class="carousel-caption">
                            Product 2
                        </div>
                    </div>
                    <div class="item">
                        <img src="http://placehold.it/1100x400" alt="...">
                        <div class="carousel-caption">
                            Product 3
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="fui-arrow-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="fui-arrow-right"></span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @using dotNET_demo.Models
    @using Prototyping.Placeholdit;
    <div class="col-md-4">
        <h4>Featured Products</h4>
        <ul class="media-list">
            @foreach (Product product in ViewBag.products)
            {
                <li class="media">
                    <a class="pull-left" href="/products/details/@product.ID">
                        <img src="http://placehold.it/100x100" class="media-object">
                    </a>
                    <div class="media-body">
                        <h6 class="media-heading">@Html.DisplayFor(modelItem => product.Name)</h6>
                        @Html.DisplayFor(modelItem => product.Description)
                    </div>
                </li>
            }
        </ul>
        <p><a class="btn btn-primary" href="/products">More Products</a></p>
    </div>
    <div class="col-md-8">
        <h4>News</h4>

        @foreach (News news in ViewBag.news)
        {
            <h4>@Html.DisplayFor(modelItem => news.Title)</h4>
            @Html.DisplayFor(modelItem => news.Content)
        }
        <p><a class="btn btn-primary" href="/news">More News</a></p>
    </div>
</div>